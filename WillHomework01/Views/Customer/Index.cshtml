@model IEnumerable<WillHomework01.Models.客戶資料>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<form action="">
    @Html.DropDownList("客戶分類", null, "==客戶分類==")

    @Html.TextBox("keyword")

    @Html.Hidden("SortOrder")

    @Html.Hidden("IsAsc")

    <input type="submit" value="搜尋" />
</form>

@{
    var sortkey = true;
    if (ViewBag.IsAsc != null)
    {
        sortkey = !ViewBag.IsAsc;
    }


 }

<table class="table">
    <tr>
        <th>
            <a href="@Url.Action("Index","Customer",new { IsAsc = sortkey, SortOrder="客戶名稱" })">
                @Html.DisplayNameFor(model => model.客戶名稱)
            </a>
        </th>
        <th>
            <a href="@Url.Action("Index","Customer",new { IsAsc = sortkey, SortOrder="統一編號" })">
                @Html.DisplayNameFor(model => model.統一編號)
            </a>
                
</th>
        <th>
            @Html.DisplayNameFor(model => model.電話)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.傳真)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.地址)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.客戶名稱)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.統一編號)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.電話)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.傳真)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.地址)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
